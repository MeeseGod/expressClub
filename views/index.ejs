<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="navbar">
      <% if(!user){ %>
        <a href="/sign-up">Sign Up</a>
        <a href="/log-in">Login</a>
      <% } else {%>
        <p><%= user.userName %></p>
        <a href="/log-out">Logout</a>
      <% } %>
    </div>
    <div class="postContainer">
      <% if(user && user.isVerified === false) {%>
        <form action="/verify-phrase" method="post">
          <input type="text" name="verificationPhrase" placeholder="Verification Phrase">
          <button>Submit Post</button>
        </form>
      <% } else { %>
      <form action="/create-post" method="post">
        <input type="text" name="postContent" placeholder="Post Message" maxlength="1200">
        <button>Submit Post</button>
      </form>
      <% } %>
    </div>
    <div class="messagesContainer">
    <% for(let i = 0; i < messages.length; i++){ %>
      <div>
        <p><%= messages[i].messageText %></p>
        <% if(user && user.isVerified === true){ %>
          <p><%= messages[i].postAuthor[0].username%></p>
        <% } else {%>
          <p>Anonymous</p>
        <% } %>
      </div>
    <% } %>
    </div>
  </body>
</html>
